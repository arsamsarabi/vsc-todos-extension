{
  "name": "vstodos",
  "displayName": "VsTodos",
  "description": "Keep track of your todos",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.53.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:vstodos-sidebar",
    "onCommand:vstodos.helloWorld",
    "onCommand:vstodos.askQuestion",
    "onCommand:vstodos.refresh"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vstodos.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "vstodos.askQuestion",
        "category": "VS Todos",
        "title": "Ask Question"
      },
      {
        "command": "vstodos.refresh",
        "category": "VS Todos",
        "title": "Refresh"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vstodos-sidebar-view",
          "title": "VS TODOs",
          "icon": "media/checklist.svg"
        }
      ]
    },
    "views": {
      "vstodos-sidebar-view": [
        {
          "type": "webview",
          "id": "vstodos-sidebar",
          "name": "VSTodos",
          "icon": "media/checklist.svg",
          "contextualTitle": "VS TODOs"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "rollup -c && webpack --mode production",
    "lint": "eslint src --ext ts",
    "watch": "concurrently \"rollup -c -w\" \"webpack --mode development --watch\"",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.1.1",
    "@rollup/plugin-typescript": "^8.1.1",
    "@tsconfig/svelte": "^1.0.10",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.53.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "concurrently": "^5.3.0",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "rollup": "^2.3.4",
    "rollup-plugin-svelte": "^6.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.32.3",
    "svelte-check": "^1.1.34",
    "svelte-preprocess": "^4.6.9",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0",
    "webpack": "^5.19.0",
    "webpack-cli": "^4.4.0"
  }
}
